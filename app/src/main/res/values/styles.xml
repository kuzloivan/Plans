<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.PlannerTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.PlannerTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <!--<style name="MyMaterialTheme" parent="Theme.Material">-->

    <!--</style>-->

    <style name="AppTheme.Fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="PlannerToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/toolbar_background_color</item>
        <!--<item name="android:colorPrimaryDark">#ffffff</item>-->
        <!--<item name="text">@color/background_material_dark</item>-->
    </style>

    <style name="PlannerViewPlanToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/color_pv_toolbar</item>
        <!--<item name="android:colorPrimaryDark">#ffffff</item>-->
        <!--<item name="text">@color/background_material_dark</item>-->
    </style>

    <style name="ToolbarTitle" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AppTheme.PlannerTheme.ListView" >
        <item name="android:dividerHeight">5dp</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="AppTheme.PlannerTheme.Menu">
        <item name="android:background">@drawable/planner_menu_item_style</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="AppTheme.PlannerTheme.ListView.Item">
        <item name="android:background">@drawable/planner_list_item</item>
    </style>

    <!-- layout -->
    <style name="style_linearlayout">
        <item name="android:layout_marginTop">@dimen/margin8</item>
        <item name="android:padding">8sp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <!-- buttons -->
    <style name="style_btns">
        <item name="android:layout_margin">8sp</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <!--registration-->
    <style name="style_registration_btns" parent="style_btns">
        <item name="android:background">@drawable/reg_btns_selector</item>
        <item name="android:textColor">@color/color_reg_btn_text</item>
    </style>

    <style name="style_reg_edittext">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">4sp</item>
        <item name="android:background">@drawable/reg_btns_et_selector</item>
    </style>

    <style name="style_reg_textview">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginLeft">8sp</item>
        <item name="android:layout_marginRight">8sp</item>
    </style>
    <!-- ********************************* -->

    <style name="style_aa_btns" parent="style_btns">
        <item name="android:background">@drawable/aa_btns_selector</item>
        <item name="android:textColor">@color/color_aa_btn_text</item>
    </style>

    <style name="aa_testview" >
        <item name="android:layout_margin">@dimen/margin8</item>
        <item name="android:textColor">@color/toolbar_background_color</item>
    </style>

    <style name="style_aa_et">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/color_aa_edit_text</item>
    </style>
</resources>
