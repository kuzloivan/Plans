<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.PlannerTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.PlannerTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="AppTheme.Fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="PlannerToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/toolbar_background_color</item>
        <!--<item name="text">@color/background_material_dark</item>-->
    </style>

    <style name="ToolbarTitle" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AppTheme.PlannerTheme.ListView" >
        <item name="android:dividerHeight">5dp</item>
        <item name="android:divider">#00ffffff</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="AppTheme.PlannerTheme.Menu">
        <item name="android:background">@drawable/planner_menu_item_style</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="AppTheme.PlannerTheme.ListView.Item">
        <item name="android:background">@drawable/planner_list_item</item>
    </style>

</resources>
