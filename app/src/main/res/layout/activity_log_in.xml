<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_nm_background"
    android:orientation="vertical"
    tools:context="chisw.com.plans.ui.NetManagementActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="@dimen/padding8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_net_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:text="@string/login"
                android:textSize="@dimen/text_size_log_sign" />

            <EditText
                android:id="@+id/net_user_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:background="@color/color_nm_edit_text_login_password"
                android:inputType="text"
                android:textSize="@dimen/text_size_changed_text"/>

            <TextView
                android:id="@+id/tv_net_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:text="@string/password"
                android:textSize="@dimen/text_size_log_sign" />

            <EditText
                android:id="@+id/net_user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:background="@color/color_nm_edit_text_login_password"
                android:inputType="textPassword"
                android:textSize="@dimen/text_size_changed_text"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/padding16" >

                <Button
                    android:id="@+id/btn_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:background="@color/color_nm_button_background_login_signup"
                    android:text="@string/Sign_up"
                    android:textColor="@color/color_nm_button_text_login_signup"
                    android:layout_weight="0.5"/>


                <Button
                    android:id="@+id/btn_log_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:background="@color/color_nm_button_background_login_signup"
                    android:text="@string/log_in"
                    android:textColor="@color/color_nm_button_text_login_signup"
                    android:layout_weight="0.5"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_sph_tst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/padding8"
                android:background="@color/color_nm_button_background_login_signup"
                android:text="@string/go_to_sph"
                android:textColor="@color/color_nm_button_text_login_signup" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>