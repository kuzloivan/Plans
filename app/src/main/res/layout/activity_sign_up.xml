<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="chisw.com.plans.ui.NetManagementActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email address"
            android:id="@+id/sua_userEmail_editText"
            android:inputType="textEmailAddress"
            android:layout_margin="8dp"
            android:textColorHint="#bbbbbb"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone number"
            android:id="@+id/sua_userPhone_editText"
            android:inputType="phone"
            android:layout_margin="8dp"
            android:textColorHint="#bbbbbb"/>

        <EditText
            android:id="@+id/sua_userName_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8"
            android:hint="User name"
            android:textColorHint="#bbbbbb"/>

        <EditText
            android:id="@+id/sua_userPassword_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8"
            android:hint="Password"
            android:textColorHint="#bbbbbb"
            android:password="true"/>

        <EditText
            android:id="@+id/sua_userPasswordConfirm_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin8"
            android:hint="Password"
            android:textColorHint="#bbbbbb"
            android:password="true"/>

        <LinearLayout
            style="@style/style_linearlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sua_signUp_btn"
                style="@style/style_registration_btns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Sign_up"/>

            <Button
                android:id="@+id/sua_back_btn"
                style="@style/style_registration_btns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>