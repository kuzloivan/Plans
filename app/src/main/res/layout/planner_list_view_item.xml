<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    style="@style/AppTheme.PlannerTheme.ListView.Item"
    android:padding="10dp"
    android:layout_height="match_parent">

        <TextView
            android:id="@+id/pa_tv_title"
            android:textColor="@color/color_list_item_text_view_text"
            android:textSize="@dimen/abc_text_size_large_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/color_list_item_text_view_text"
            android:id="@+id/pa_tv_time"
            android:textSize="@dimen/abc_text_size_small_material"
            android:layout_height="wrap_content"
            android:layout_below="@id/pa_tv_title"
            android:text="18.50"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/abc_text_size_small_material"
            android:textStyle="italic"
            android:id="@+id/pa_tv_date"
            android:textColor="@color/color_list_item_text_view_text"
            android:layout_height="wrap_content"
            android:layout_below="@id/pa_tv_title"
            android:layout_alignParentRight="true"
            android:text="2015.06.12"/>
</RelativeLayout>