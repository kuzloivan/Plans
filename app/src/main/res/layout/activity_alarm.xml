<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:id="@+id/aa_rellay_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/aa_image"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/aa_icon"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/aa_image"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/setDate_textview"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin8"
                        android:clickable="true"
                        android:paddingLeft="24dp"
                        android:text="@string/set_date"
                        android:textColor="@color/color_aa_edit_text"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/setTime_textview"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin8"
                        android:clickable="true"
                        android:paddingLeft="24dp"
                        android:text="@string/set_time"
                        android:textColor="@color/color_aa_edit_text"
                        android:textSize="20sp"/>

                </LinearLayout>

            </RelativeLayout>

            <EditText
                android:id="@+id/setTitle_textview"
                style="@style/style_aa_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/aa_rellay_top"
                android:hint="@string/alarm_title_hint"
                android:maxLength="21"
                android:maxLines="1"/>


            <EditText
                android:id="@+id/setDetails_textview"
                style="@style/style_aa_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/setTitle_textview"
                android:hint="@string/alarm_details_hint"
                android:maxLines="5"/>


            <RelativeLayout
                android:id="@+id/relative_layout_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setDetails_textview"
                android:orientation="horizontal"
                android:visibility="gone">
                <!--android:visibility="visible">-->
                <LinearLayout
                    android:id="@+id/linear_layout_audioName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--android:layout_below="@id/layout_sound_duration">-->

                    <TextView
                        android:id="@+id/alarmSound_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/linear_layout_audioName"
                        android:layout_margin="@dimen/margin16"
                        android:text="Alarm sound: "/>

                    <TextView
                        android:id="@+id/alarmSoundTitle_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/linear_layout_audioName"
                        android:layout_margin="@dimen/margin16"
                        android:layout_toRightOf="@+id/alarmSound_textview"
                        android:ellipsize="marquee"
                        android:lines="2"
                        android:text="--"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_sound_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_layout_audioName">

                    <TextView
                        android:id="@+id/tv_duration_sound"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin16"
                        android:text="Sound duration"/>

                    <TextView
                        android:id="@+id/tv_sound_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin16"
                        android:text="--"/>

                    <SeekBar
                        android:id="@+id/sb_duration_sound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin8"
                        android:layout_weight="100"
                        android:max="100"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_layout_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_layout_duration">

                <TextView
                    android:id="@+id/alarmRepearing_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin16"
                    android:text="Repeating"/>

                <Switch
                    android:id="@+id/switch_repeating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin16"
                    android:layout_toRightOf="@+id/alarmRepearing_textview"
                    android:textOff="OFF"
                    android:textOn="ON"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_layout_repeat">


                <TextView
                    android:id="@+id/aa_phone_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone number"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_layout_phone"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/aa_setAudio_btn"
                    style="@style/style_aa_btns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_choose_sound"
                    android:text="Set sound"/>

                <Button
                    android:id="@+id/bt_save_alarm"
                    style="@style/style_aa_btns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_save"
                    android:text="Save alarm"/>

                <Button
                    android:id="@+id/get_contact_list_bt"
                    style="@style/style_aa_btns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get contact list"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>