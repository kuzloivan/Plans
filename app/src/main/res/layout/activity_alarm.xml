<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/setDate_textview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/set_date"
                    android:textColor="#00796B"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/setTime_textview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/set_time"
                    android:textColor="#00796B"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dateValue_textview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:layout_weight="50"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="#00796B"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/timeValue_textview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:layout_weight="50"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="#00796B"
                    android:textSize="22sp" />
            </LinearLayout>


            <EditText
                android:id="@+id/setTitle_textview"
                style="@style/style_aa_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/alarmTitle_hint"
                android:maxLines="10" />

            <EditText
                android:id="@+id/setDetails_textview"
                style="@style/style_aa_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Details" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_duration_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin"
                    android:text="Sound duration" />

                <TextView
                    android:id="@+id/tv_show_duration_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin"
                    android:text="--" />

                <SeekBar
                    android:id="@+id/sb_duration_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="100"
                    android:max="100" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/aa_setAudio_btn"
                    style="@style/style_aa_btns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_choose_sound"
                    android:paddingLeft="8dp"
                    android:text="Set sound" />

                <Button
                    android:id="@+id/bt_save_alarm"
                    style="@style/style_aa_btns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_save"
                    android:paddingLeft="8dp"
                    android:text="@string/save_alarm" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>