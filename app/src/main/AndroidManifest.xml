<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="chisw.com.plans">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".core.PApplication">

        <activity android:name=".ui.activities.SplashActivity"
            android:theme="@style/AppTheme.Fullscreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.activities.NetManagementActivity"
            android:label="@string/title_activity_net_management" >
        </activity>

        <activity
            android:name=".ui.activities.MediaActivity"
            android:label="@string/title_activity_media" >
        </activity>

        <activity
            android:name=".ui.activities.PlannerActivity"
            android:theme="@style/AppTheme.PlannerTheme"
            android:label="@string/title_activity_planner">
        </activity>

        <activity android:name=".ui.activities.AlarmActivity"/>

        <activity android:name=".ui.activities.SettingsActivity"
            android:label="@string/title_activity_settings"/>
    </application>

</manifest>
